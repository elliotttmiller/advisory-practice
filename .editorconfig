# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
shell_variant = bash

# Makefiles require tabs
[Makefile]
indent_style = tab

# Dockerfile
[Dockerfile*]
indent_size = 4

# Git configuration files
[.git*]
indent_size = 4
