# Environment Configuration Template
# Copy this file to .env.local and fill in the values

# Application
NEXT_PUBLIC_APP_NAME="Financial Advisor Platform"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# Mock Mode for UI/UX Development
# Set to 'true' to enable mock mode (use npm run dev:mock)
# When enabled, the frontend uses mock data instead of real API calls
NEXT_PUBLIC_MOCK_MODE=false

# Authentication
NEXT_PUBLIC_AUTH_PROVIDER_URL=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# Compliance Mode
NEXT_PUBLIC_COMPLIANCE_MODE=development
