# Environment Configuration Template
# Copy this file to .env and fill in the values

# Application
NODE_ENV=development
PORT=4000
API_PREFIX=api

# Database
DATABASE_URL=postgresql://advisor_user:advisor_password_dev@localhost:5432/financial_advisor

# Redis
REDIS_URL=redis://:redis_password_dev@localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key

# MinIO/S3 Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio_admin
S3_SECRET_KEY=minio_password_dev
S3_BUCKET_DOCUMENTS=financial-advisor-documents

# Email (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@financial-advisor.local

# Compliance Settings
COMPLIANCE_MODE=development
AUDIT_LOG_RETENTION_DAYS=2555

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
